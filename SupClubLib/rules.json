{
  "rules": {
    "boards": {
      ".read": "auth != null",
      ".write": "auth != null && data.parent().child('administrators').child(auth.uid).exists()"
    },
    "users": {
      "$userId": {
        ".read": "auth.uid == $userId",
        ".write": "auth.uid == $userId && auth.token.email_verified == true"
      }
    },
    "reservations": {
      ".read": "auth != null",
      "$reservationId": {
        ".write": "auth != null && newData.child('UserId').val() == auth.uid"
      }
    }
  }
}

